        <CheckBox
            android:id="@+id/cbPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MEDICARE PLUS INC." />

        <CheckBox
            android:id="@+id/cbMedo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
