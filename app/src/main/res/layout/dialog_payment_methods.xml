        <CheckBox
            android:id="@+id/cbPacific"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PACIFIC CROSS HEALTH CARE, INC" />

        <CheckBox
            android:id="@+id/cbPhil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PHILCARE PHILHEALTH CARE, INC." />

        <CheckBox
            android:id="@+id/cbCASH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CASH" />

        <CheckBox
            android:id="@+id/cbGCASH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GCASH" />

        <CheckBox
            android:id="@+id/cbBANK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BANK" />
