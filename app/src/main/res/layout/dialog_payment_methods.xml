        <CheckBox
            android:id="@+id/cbEast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EASTWEST HEALTHCARE INC." />

        <CheckBox
            android:id="@+id/cbHealth"
            android:layout_width="wrap_content"
